{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
        "es2017",
        "es2016",
        "es2015",
        "dom"
    ],
    "rootDir": ".",
    "outDir": "out",
    "esModuleInterop": true,

    "declaration": true,
    "resolveJsonModule": true,
    "pretty": true
  },
  "include": [
    "*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}